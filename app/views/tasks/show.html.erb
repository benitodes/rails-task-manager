<div class=container>
  <div class="card">
    <div class="card-body">
      <h1><%= @task.title %></h1>
      <p><%= @task.details %></p>
        <% if @task.completed? %>
          <p>This task is completed</p>
        <% else %>
          <form>
            <p>This task is not completed</p>
          </form>
        <%end %>
      <%= link_to "Edit task", edit_path, class: 'btn btn-danger' %>
      <%= link_to "Back to tasks", tasks_path, class: 'btn btn-success'%>
    </div>

  </div>
</div>
